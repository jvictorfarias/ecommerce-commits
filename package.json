{
  "name": "jvictorfarias.lora-commits",
  "author": {
    "name": "Victor Farias",
    "email": "victor.farias@osf.digital"
  },
  "displayName": "LORA Commits",
  "description": "A tool to easily generate LORA project commits",
  "publisher": "jvictorfarias",
  "icon": "https://drive.google.com/file/d/1ZjlAMlLELVsvfpcYtTA3Ws0WDa4ZnhSH/view?usp=share_link",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lora-commits.generateCommit",
        "title": "LORA Commits: Generate Commit"
      }
    ],
    "configuration": {
      "title": "loraCommits",
      "type": "object",
      "properties": {
        "loraCommits.commitTypes": {
          "type": "array",
          "default": [
            "fix",
            "feat",
            "refactor",
            "style",
            "perf",
            "test",
            "docs",
            "chore"
          ],
          "description": "Commit types"
        },
        "loraCommits.impactedAreas": {
          "type": "array",
          "default": [
            "GLOBAL",
            "CHECKOUT",
            "PDP",
            "HP",
            "PLP",
            "CART",
            "MYACCOUNT",
            "MISC"
          ],
          "description": "Impacted areas"
        },
        "loraCommits.defaultProjectLabel": {
          "type": "string",
          "default": "",
          "description": "Default project label for LORA"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/test-electron": "^2.3.0"
  }
}
